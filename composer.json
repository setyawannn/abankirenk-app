{
  "name": "mafem/abankirenk-app",
  "description": "Manajemen konveksi abankirenk",
  "authors": [
    {
      "name": "Prayoga Adi Setyawan",
      "email": "prayogasetyawan.adi@gmail.com"
    }
  ],
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "intervention/image": "^3.11",
    "php": "^8.0",
    "ext-gd": "*",
    "ext-mysqli": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "template:clear": "php scripts/clear-template-cache.php",
    "storage:link": [
      "php scripts/create_storage_link.php"
    ],
    "dev": [
      "npm run dev",
      "php -S localhost:9000 -t public"
    ]
  }
}